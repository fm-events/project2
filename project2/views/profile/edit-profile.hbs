<h3>Edit the Profile</h3>
<div class='card-deck'>
  <div class='card mb-3'>
    <div class='container'>
      <div class='card-body'>
        <img
          id='profilePic'
          src='{{this.profilePicture}}'
          alt='profile-picture'
        />
        <form
          action='/profile/edit'
          method='post'
          enctype='multipart/form-data'
        >
          <div class='form-group'>
            <label>Email:</label>
            <input
              class='form-control'
              type='email'
              name='email'
              value='{{this.email}}'
            />
          </div>
          <div class='form-group'>
            <label>Profile Picture</label>
            <input
              class='form-control'
              type='file'
              name='profilePicture'
              value='{{this.profilePicture}}'
            />
          </div>
          <div class='form-group'>
            <button class='btn btn-info' type='submit'>Save changes</button>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>